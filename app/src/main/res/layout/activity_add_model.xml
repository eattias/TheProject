<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.theproject.controller.addModel"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:weightSum="1">

    <EditText
        android:id="@+id/modelcodeTextView"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="Model code"
        android:inputType="number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/companyNametextView"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="Company name"
        android:inputType="text" />

    <EditText
        android:id="@+id/modelNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Model name"
        android:inputType="text" />

    <EditText
        android:id="@+id/engineCapacitytextView"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="Engine capacity"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/gearBoxSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/seatsNumTextView"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:hint="Number of seats"
        android:inputType="number" />

    <Button
        android:id="@+id/addmodelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add model " />
</LinearLayout>
